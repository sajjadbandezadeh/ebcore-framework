{
    "name": "ebcore/framework",
    "description": "A Modern Entity Based PHP Framework",
    "type": "library",
    "keywords": ["framework", "ebcore", "iranian php framework"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sajjad Bandezadeh",
            "email": "sajjadbnz1@gmail.com"
        }
    ],
    "replace": {
        "ebcore/framework": "self.version"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "ebcore\\": "."
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    }
} 
